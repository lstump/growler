datasource db {  
  provider = "sqlite"  
  url      = env("DATABASE_URL")  
}  
  
generator client {  
  provider = "prisma-client-js"  
}  
  
model User {  
  id    String @id @default(cuid())
  email String @unique
  username  String   @unique  
  password  String  
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt  
  posts     Post[]
  likes     Like[]
  reposts   Repost[]
  replies   Reply[]
}  
  
model Post {  
  id          Int      @id @default(autoincrement())
  topic       String
  content     String  
  createdAt   DateTime @default(now())  
  updatedAt   DateTime @updatedAt  
  user        User     @relation(fields: [userId], references: [id])  
  userId      String
  likes       Like[]
  reposts     Repost[]
  replies     Reply[]
}  
  
model Like {  
  id        Int      @id @default(autoincrement())  
  user      User     @relation(fields: [userId], references: [id])  
  userId    String  
  post      Post     @relation(fields: [postId], references: [id])  
  postId    Int  
  createdAt DateTime @default(now())  
}  
  
model Repost {  
  id        Int      @id @default(autoincrement())  
  user      User     @relation(fields: [userId], references: [id])  
  userId    String  
  post      Post     @relation(fields: [postId], references: [id])  
  postId    Int  
  createdAt DateTime @default(now())  
}  
  
model Reply {  
  id        Int      @id @default(autoincrement())  
  content   String  
  user      User     @relation(fields: [userId], references: [id])  
  userId    String  
  post      Post     @relation(fields: [postId], references: [id])  
  postId    Int  
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt  
}  
